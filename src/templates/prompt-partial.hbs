<form id="handy-dandy-form">
  <label for="prompt">Prompt:</label>
  <input type="text" id="prompt" name="prompt" required>

  <label for="context">Context:</label>
  <textarea id="context" name="context"></textarea>

  <fieldset>
    <legend>AI Parameters</legend>

    <label for="temperature">Temperature:</label>
    <input type="number" id="temperature" name="parameters[temperature]" min="0" max="1" step="0.01" value="0.7">

    <label for="maxLength">Max Length:</label>
    <input type="number" id="maxLength" name="parameters[maxLength]" min="1" value="100">
  </fieldset>
</form>
<br>
<button id="generateButton">Generate</button>