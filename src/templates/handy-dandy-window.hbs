<!-- handy-dandy-window.hbs -->
<form class="handy-dandy-form">
    <div class="form-group">
        <label>Select Type:</label>
        <select name="type" class="type-dropdown">
            <option value="feat">Feat</option>
            <option value="item">Item</option>
            <option value="action">Action</option>
            <option value="spell">Spell</option>
            <option value="monster">Monster</option>
            <option value="npc">NPC</option>
        </select>
    </div>
    <div class="form-group">
        <label>What should this object be about?</label>
        <textarea name="userPrompt" class="user-prompt" rows="4"></textarea>
    </div>

    <button class="generate-button">Generate</button>
</form>

<div class="response-output" style="display: none;"></div>

<div class="loading-spinner" style="display:none;">
    <i class="fas fa-spinner fa-spin"></i> Loading Response...
</div>
