{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@actor": [
        "types/src/module/actor/index.js"
      ],
      "@actor/*": [
        "types/src/module/actor/*"
      ],
      "@item": [
        "types/src/module/item/index.js"
      ],
      "@item/*": [
        "types/src/module/item/*"
      ],
      "@module/*": [
        "types/src/module/*"
      ],
      "@scene": [
        "types/src/module/scene/index.js"
      ],
      "@scene/*": [
        "types/src/module/scene/*"
      ],
      "@scripts/*": [
        "types/src/scripts/*"
      ],
      "@system/*": [
        "types/src/module/system/*"
      ],
      "@util": [
        "types/src/util/index.js"
      ],
      "@util/*": [
        "types/src/util/*"
      ]
    },
    "types": ["node", "jquery", "foundry-types"],
    "useDefineForClassFields": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types",
      "types/types/foundry",
      "types"
    ]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": false,
      "skipLibCheck": true
    }
  }
}
